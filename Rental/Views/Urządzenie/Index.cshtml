@model IEnumerable<Rental.Models.Urządzenie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Dodaj urządzenie", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nazwa Urządzenia
        </th>
        <th>
            Miesięczny Koszt Wypożyczenia
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NazwaUrządzenia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MiesięcznyKosztWypożyczenia)
        </td>
        <td>
            @Html.ActionLink("Edycja", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.Id }) |
            @Html.ActionLink("Usunięcie", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
